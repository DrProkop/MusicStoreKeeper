<Window x:Class="Vmv.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:Vmv.ViewModel"
        xmlns:local="clr-namespace:Vmv.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <ResourceDictionary  Source="pack://application:,,,/ResourceLibrary;component/Brushes.xaml"/>
    </Window.Resources>
    <Grid Background="{StaticResource MainBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
       
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button Content="Screen A" Command="{Binding ChangeScreenCommand, UpdateSourceTrigger=PropertyChanged}" CommandParameter="{Binding ScreenA}" ></Button>
            <Button Content="Screen B" Command="{Binding ChangeScreenCommand, UpdateSourceTrigger=PropertyChanged}" CommandParameter="{Binding ScreenB}"></Button>
        </StackPanel>
        <!-- screen display area -->
        <Grid Grid.Row="1">
            <Grid.Resources>
                <DataTemplate DataType="{x:Type viewModel:ScreenAVm}" >
                    <local:ScreenAView/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type viewModel:ScreenBVm}" >
                    <local:ScreenBView/>
                </DataTemplate>
            </Grid.Resources>
            <ContentControl Grid.Row="0" Content="{Binding CurrentScreen, UpdateSourceTrigger=PropertyChanged}"/> 
        </Grid>
    </Grid>
</Window>
