<Fluent:RibbonWindow  x:Class="Vmv.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Fluent="urn:fluent-ribbon"
        xmlns:viewModel="clr-namespace:Vmv.ViewModel"
        xmlns:local="clr-namespace:Vmv.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <ResourceDictionary  Source="pack://application:,,,/ResourceLibrary;component/Brushes.xaml" />
    </Window.Resources>
    <Grid Background="{StaticResource MainBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Fluent:Ribbon Grid.Row="0" Background="BlueViolet">
            <!--Tabs-->
            <!-- Music collection -->
            <Fluent:RibbonTabItem Header="Collection">
                <Fluent:RibbonGroupBox Header="Screens">
                    <Fluent:Button Header="ScreenA"  Content="ScreenA" Command="{Binding ChangeScreenCommand, UpdateSourceTrigger=PropertyChanged}" CommandParameter="{Binding ScreenA}" />
                    <Fluent:Button Header="ScreenB" Content="ScreenB" Command="{Binding ChangeScreenCommand, UpdateSourceTrigger=PropertyChanged}" CommandParameter="{Binding ScreenB}" />
                </Fluent:RibbonGroupBox>
                <Fluent:RibbonGroupBox Header="File manager" DataContext="{Binding CurrentScreen}">
                    <Fluent:Button Header="Scan folder"  LargeIcon="pack://application:,,,/ResourceLibrary;component/Images/Buttons/search_icon.png" Command="{Binding ScanDirectoryCommand}" />
                    <Fluent:Button Header="Add to collection" LargeIcon="pack://application:,,,/ResourceLibrary;component/Images/Buttons/add_files_manually_icon.png"  Command="{Binding ScanDirectoryCommand}" />
                    <Fluent:Button Header="Discogs"  LargeIcon="pack://application:,,,/ResourceLibrary;component/Images/Buttons/vinyl_record_icon.png"  Command="{Binding ScanDirectoryCommand}" />
                </Fluent:RibbonGroupBox>
            </Fluent:RibbonTabItem>

            <!-- Adding files to collection -->
            <Fluent:RibbonTabItem Header="Add files">
            </Fluent:RibbonTabItem>
        </Fluent:Ribbon>

        <!-- screen display area -->
        <Grid Grid.Row="1">
            <Grid.Resources>
                <DataTemplate DataType="{x:Type viewModel:ScreenAVm}">
                    <local:ScreenAView />
                </DataTemplate>
                <DataTemplate DataType="{x:Type viewModel:ScreenBVm}">
                    <local:ScreenBView />
                </DataTemplate>
            </Grid.Resources>
            <ContentControl Grid.Row="0" Content="{Binding CurrentScreen}" />
        </Grid>
    </Grid>
</Fluent:RibbonWindow>